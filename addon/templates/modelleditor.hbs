<head>
<link rel="stylesheet" type="text/css" href="../../vendor/style.css">
</head>


<div class="canvas">
{{#if showLandscape}}
  {{visualization/rendering/landscape-rendering latestLandscape=modellRepo.modellLandscape interaction=landscapeInteraction}}
{{else}}
  {{visualization/rendering/application-rendering latestApplication=modellRepo.modellApplication}}
{{/if}}
</div>
<div class="buttonMenu">
	<div class="buttonContainer">
    {{#if showLandscape}}
      <br>
      &emsp;<input id="nMN" type=number value="42">
      &emsp;<button id="bNMN" {{action 'newModel' modellRepo.modellLandscape}}>New Model</button><br>
      &emsp;<input id="nSN" value="newSystemName">
      &emsp;<button id="bNSN" {{action 'newSystem' modellRepo.modellLandscape}}>New System</button><br>
      &emsp;<input id="nNgN" value="newNodegroupName">
      &emsp;<button id="bNNgN" {{action 'newNodegroup' modellRepo.modellLandscape}}>New Nodegroup</button><br>
      &emsp;<input id="nNN" value="newNodeName">
      &emsp;<button id="bNNN" {{action 'newNode' modellRepo.modellLandscape}}>New Node</button><br>
      &emsp;<input id="nAN" value="newApplicationName">
      &emsp;<button id="bNAN" {{action 'newApplication' modellRepo.modellLandscape}}>New Application</button><br>
      <br>
      &emsp;<button id="bD" {{action 'delete' modellRepo.modellLandscape}}>Delete System</button><br>
      <br>
      <br>
      <br>
      <br>
      <br>
      &emsp;CommunicationPartner1:<br>
      &emsp;<input id="cPS1" value="newSystemName"><br>
      &emsp;<input id="cPNG1" value="newNodegroupName"><br>
      &emsp;<input id="cPN1" value="newNodeName"><br>
      &emsp;<input id="cPA1" value="newApplicationName"><br>
      <br>
      &emsp;<button id="bNAN" {{action 'communicationActivate' modellRepo.modellLandscape}}>Communication ACTIVATE</button>&emsp;<button id="bNAN" {{action 'switchComP'}}>Switch Partner</button><br>
      <br>
      &emsp;CommunicationPartner2:<br>
      &emsp;<input id="cPS2" value="newSystemName"><br>
      &emsp;<input id="cPNG2" value="newNodegroupName"><br>
      &emsp;<input id="cPN2" value="newNodeName"><br>
      &emsp;<input id="cPA2" value="newApplicationName"><br>
    {{else}}
      <br>
      &emsp;<input id="nPComponentN" value="ParentComponentName"><br>
      <br>
      &emsp;<input id="nCComponentN" value="newComponentName">
      &emsp;<button id="bNComponentN" {{action 'newComponent' modellRepo.modellApplication}}>New Component</button><br>
      &emsp;<input id="nClazzN" value="newClassName">
      &emsp;<button id="bNClazzN" {{action 'newClazz' modellRepo.modellApplication}}>New Class</button><br>
      <br>
    {{/if}}
  </div>
</div>


<script>
  document.getElementById("nSN").addEventListener("keyup", function(event) {
    event.preventDefault();
    if (event.keyCode === 13) {
        document.getElementById("bNSN").click();
    }
  });

    document.getElementById("nNgN").addEventListener("keyup", function(event) {
    event.preventDefault();
    if (event.keyCode === 13) {
        document.getElementById("bNNgN").click();
    }
  });

      document.getElementById("nNN").addEventListener("keyup", function(event) {
    event.preventDefault();
    if (event.keyCode === 13) {
        document.getElementById("bNNN").click();
    }
  });

  document.getElementById("nAN").addEventListener("keyup", function(event) {
    event.preventDefault();
    if (event.keyCode === 13) {
        document.getElementById("bNAN").click();
    }
  });
</script>
